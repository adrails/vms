<h1>Listing Users</h1>

<table>
  <tr>
    <th>Email</th>
    <th>Confirmed Status</th>
    <th>Role</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Destroy</th>
  </tr>

<% @users.each do |user| %>
	<%if user.role != "ADMIN"%>
		<tr>
			<td><%= user.email %></td>
			<td><%= user.confirmed_at ? "YES" : "NO"%></td>
			<td><%= user.role %></td>
			<td><%= link_to 'Show', show_user_admin_path(user) %></td>
			<td><%= link_to 'Edit', edit_user_admin_path(user) %></td>
			<td><%= link_to 'Destroy', destroy_user_admin_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
<% end %>
</table>

